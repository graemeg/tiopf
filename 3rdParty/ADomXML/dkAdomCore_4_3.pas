  end;

  // Check default value:
  InEntityRef := False;
  Text := '';
  for I := 1 to Length(DefaultValue) do begin
    if InEntityRef then begin
      if DefaultValue[I] = ';' then begin
        if Text[1] = '#' then begin // CharRef
          try
            CharacRef := Concat(WideString('&'), Text, WideString(';'));
