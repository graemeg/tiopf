  Nr: Integer;
begin
  Nr := IndexOf(Item);
  Result := inherited Remove(Item);
  if Assigned(Items[Nr]) then
    with Item do begin
      FOffset := 0;
      FOwner := nil;
    end;
  CalculatePieceOffset(Nr);
end;

