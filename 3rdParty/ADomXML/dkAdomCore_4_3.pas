      if DefaultValue[I] = '&' then begin
        InEntityRef := True;
      end else if (DefaultValue[I] = '<') then begin
        // WFC: No < in Attribute Values (XML 1.0, § 3.3.2), etc.
        XmlErrorType := ET_LT_IN_ATTRIBUTE_VALUE;
